{
  "name": "@poncegl/theme",
  "version": "0.0.2",
  "source": "src/index",
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "author": "PonceGL",
  "license": "MIT",
  "scripts": {
    "android": "yarn example android",
    "ios": "yarn example ios",
    "start": "yarn example start --reset-cache",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:clear": "jest --clearCache",
    "types": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint ./src/ --fix --ext .ts,.tsx",
    "typeslint": "yarn types && yarn lint",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn && yarn example pods",
    "prepare": "bob build",
    "release": "release-it",
    "prepack": "bob build",
    "husky:install": "husky install",
    "clean:all": "cd example && cd android && ./gradlew clean && cd .. && cd ios && rm -rf Pods && cd .. && rm -rf node_modules && cd .. && rm -rf node_modules"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.11",
    "@release-it/conventional-changelog": "^7.0.1",
    "@testing-library/react-native": "^12.3.0",
    "@tsconfig/react-native": "^3.0.0",
    "@types/jest": "^29.5.4",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.49.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-native": "^4.1.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.2.1",
    "lint-staged": "^14.0.1",
    "metro-react-native-babel-preset": "0.76.8",
    "pod-install": "^0.1.39",
    "prettier": "^2.4.1",
    "react": "18.2.0",
    "react-native": "0.72.4",
    "react-native-builder-bob": "^0.21.3",
    "react-test-renderer": "^18.2.0",
    "release-it": "^16.1.5",
    "typescript": "4.8.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "main": "lib/commonjs/index.js",
  "react-native": "src/index.tsx",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "files": [
    "src",
    "lib",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
